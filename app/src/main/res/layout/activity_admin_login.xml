<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AdminLogin">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        app:srcCompat="@drawable/admintop" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="236dp"
        android:layout_height="248dp"
        android:layout_x="90dp"
        android:layout_y="-12dp"
        app:srcCompat="@drawable/main" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="349dp"
        android:layout_height="512dp"
        android:layout_x="35dp"
        android:layout_y="208dp"
        app:srcCompat="@drawable/viewpager" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="144dp"
        android:layout_y="331dp"
        android:fontFamily="@font/castoro"
        android:text="LOG IN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold|normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_x="53dp"
        android:layout_y="394dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Log in with your Admin Account to manage inventory."
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.22000003" />

    <EditText
        android:id="@+id/admin_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_x="55dp"
        android:layout_y="438dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="16dp"
        android:hint="Email"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp" />

    <EditText
        android:id="@+id/admin_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_x="56dp"
        android:layout_y="525dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/icon_lock"
        android:drawablePadding="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:textColor="#0E0E0E" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="142dp"
        android:layout_height="253dp"
        android:layout_x="137dp"
        android:layout_y="121dp"
        app:srcCompat="@drawable/bisu" />

    <Button
        android:id="@+id/admin_login"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_x="81dp"
        android:layout_y="627dp"
        android:background="@drawable/button_"
        android:fontFamily="@font/montserrat_light"
        android:padding="5dp"
        android:text="Login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</AbsoluteLayout>