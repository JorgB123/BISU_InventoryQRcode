<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/request_item_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Item ID:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/request_item_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_item_id_label"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/property_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property ID:"
        android:textStyle="bold"
        android:layout_below="@id/request_item_id_text_view"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/property_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/property_id_label"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textStyle="bold"
        android:layout_below="@id/property_id_text_view"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_label"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/user_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID:"
        android:textStyle="bold"
        android:layout_below="@id/quantity_text_view"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/user_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id_label"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/transfer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id_text_view"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:text="Transfer" />

</RelativeLayout>
